{
  "openapi": "3.0.3",
  "info": {
    "title": "SpareParts E-commerce API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:8081/api", "description": "Local" }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": { "description": "OK" },
          "503": { "description": "Degraded" }
        }
      }
    },
    "/v1/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Login successful" } }
      }
    },
    "/v1/products/{slug}": {
      "get": {
        "summary": "Get product by slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Product" } }
      }
    },
    "/v1/reviews/product/{productId}": {
      "get": {
        "summary": "List product reviews",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Reviews" } }
      }
    },
    "/v1/reviews": {
      "post": {
        "summary": "Create review",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": { "type": "string" },
                  "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
                  "title": { "type": "string" },
                  "comment": { "type": "string" }
                },
                "required": ["productId", "rating"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/v1/wishlist": {
      "get": {
        "summary": "List wishlist",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Wishlist" } }
      },
      "post": {
        "summary": "Add to wishlist",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "productId": { "type": "string" } },
                "required": ["productId"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Added" } }
      }
    },
    "/v1/payments/initiate": {
      "post": {
        "summary": "Initiate payment",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": { "type": "string" },
                  "gateway": { "type": "string", "enum": ["stripe", "razorpay"] }
                },
                "required": ["orderId", "gateway"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Initiated" } }
      }
    },
    "/v1/payments/retry": {
      "post": {
        "summary": "Retry payment",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": { "type": "string" },
                  "gateway": { "type": "string", "enum": ["stripe", "razorpay"] }
                },
                "required": ["orderId", "gateway"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Enqueued" } }
      }
    },
    "/v1/cart": {
      "get": {
        "summary": "Get cart",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Cart" } }
      }
    },
    "/v1/orders/place": {
      "post": {
        "summary": "Place order",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Order placed" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
